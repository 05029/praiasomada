    <script>
        // Pre√ßos das rotas
        const precos = {
            'Tarrafal-Assomada': 300,
            'Assomada-Tarrafal': 300,
            'Tarrafal-Praia': 600,
            'Praia-Tarrafal': 600,
            'Assomada-Praia': 500,
            'Praia-Assomada': 500
        };

        // N√∫mero WhatsApp para envio
        const NUMERO_WHATSAPP = "9177161"; // N√∫mero sem espa√ßos para URL
        const NUMERO_DISPLAY = "917 71 61"; // N√∫mero formatado para display

        // Cidades dispon√≠veis
        const cidades = ['Tarrafal', 'Assomada', 'Praia'];

        // Inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar data m√≠nima (hoje)
            const hoje = new Date();
            const dataFormatada = hoje.toISOString().split('T')[0];
            document.getElementById('data').min = dataFormatada;
            
            // Configurar hora (05:00 - 22:00)
            document.getElementById('hora').min = '05:00';
            document.getElementById('hora').max = '22:00';
            
            // Event listeners para c√°lculo de pre√ßo
            document.getElementById('origem').addEventListener('change', function() {
                atualizarDestinos();
                calcularPreco();
            });
            
            document.getElementById('destino').addEventListener('change', calcularPreco);
            document.getElementById('passageiros').addEventListener('change', calcularPreco);
            
            // Event listeners para valida√ß√£o
            document.getElementById('data').addEventListener('change', validarData);
            document.getElementById('hora').addEventListener('change', validarHora);
            
            // Formatar telefone enquanto digita
            document.getElementById('telefone').addEventListener('input', formatarTelefone);
            
            // Calcular pre√ßo inicial
            calcularPreco();
        });

        // Atualizar op√ß√µes de destino
        function atualizarDestinos() {
            const origem = document.getElementById('origem').value;
            const destinoSelect = document.getElementById('destino');
            const destinoAtual = destinoSelect.value;
            
            destinoSelect.innerHTML = '<option value="">Selecione o destino</option>';
            
            cidades.forEach(cidade => {
                if (cidade !== origem) {
                    const option = document.createElement('option');
                    option.value = cidade;
                    option.textContent = cidade;
                    destinoSelect.appendChild(option);
                }
            });
            
            if (destinoAtual === origem) {
                destinoSelect.value = '';
                esconderErro('erro-destino');
            }
        }

        // Formatar telefone
        function formatarTelefone(event) {
            let valor = event.target.value.replace(/\D/g, '');
            
            if (valor.length > 9) {
                valor = valor.substring(0, 9);
            }
            
            // Formatar: XXX XX XX ou XXX XXX XXX
            if (valor.length > 6) {
                valor = valor.replace(/(\d{3})(\d{2})(\d{2})/, '$1 $2 $3');
            } else if (valor.length > 4) {
                valor = valor.replace(/(\d{3})(\d{2})/, '$1 $2');
            }
            
            event.target.value = valor;
        }

        // Calcular pre√ßo
        function calcularPreco() {
            const origem = document.getElementById('origem').value;
            const destino = document.getElementById('destino').value;
            const passageiros = parseInt(document.getElementById('passageiros').value);
            const precoDiv = document.getElementById('preco');
            
            if (origem && destino && origem !== destino) {
                const rota = `${origem}-${destino}`;
                let precoBase = precos[rota];
                
                if (precoBase) {
                    // Ajustar pre√ßo para m√∫ltiplos passageiros
                    let precoTotal = precoBase;
                    if (passageiros > 1) {
                        precoTotal = precoBase * passageiros;
                        if (passageiros >= 5) {
                            precoTotal = precoBase * 4; // Desconto para grupos
                        }
                    }
                    
                    precoDiv.innerHTML = `
                        <div style="font-size: 16px; color: #495057;">Pre√ßo da rota ${origem} ‚Üí ${destino}:</div>
                        <div style="font-size: 24px;">${precoTotal} Escudos</div>
                        ${passageiros > 1 ? `<div style="font-size: 14px; color: #6c757d;">(${precoBase} √ó ${passageiros} passageiros)</div>` : ''}
                    `;
                    precoDiv.style.display = 'block';
                } else {
                    precoDiv.textContent = 'Pre√ßo n√£o dispon√≠vel para esta rota';
                    precoDiv.style.color = '#dc3545';
                }
            } else {
                precoDiv.textContent = 'Selecione origem e destino para ver o pre√ßo';
                precoDiv.style.color = '#6c757d';
            }
        }

        // Valida√ß√µes
        function validarData() {
            const dataInput = document.getElementById('data');
            const dataSelecionada = new Date(dataInput.value);
            const hoje = new Date();
            hoje.setHours(0, 0, 0, 0);
            
            if (dataSelecionada < hoje) {
                mostrarErro('erro-data', 'A data n√£o pode ser no passado');
                return false;
            }
            
            esconderErro('erro-data');
            return true;
        }

        function validarHora() {
            const horaInput = document.getElementById('hora').value;
            
            if (!horaInput) {
                mostrarErro('erro-hora', 'Selecione um hor√°rio');
                return false;
            }
            
            const hora = parseInt(horaInput.split(':')[0]);
            
            if (hora < 5 || hora > 22) {
                mostrarErro('erro-hora', 'Hor√°rio fora do funcionamento (05:00 - 22:00)');
                return false;
            }
            
            esconderErro('erro-hora');
            return true;
        }

        function validarTelefone() {
            const telefone = document.getElementById('telefone').value;
            const telefoneNumerico = telefone.replace(/\D/g, '');
            
            if (telefoneNumerico.length < 7) {
                mostrarErro('erro-telefone', 'Digite um telefone v√°lido (m√≠nimo 7 d√≠gitos)');
                return false;
            }
            
            esconderErro('erro-telefone');
            return true;
        }

        function validarNome() {
            const nome = document.getElementById('nome').value.trim();
            
            if (nome.length < 3) {
                mostrarErro('erro-nome', 'Digite seu nome completo (m√≠nimo 3 caracteres)');
                return false;
            }
            
            esconderErro('erro-nome');
            return true;
        }

        function validarLocalizacao() {
            const localizacao = document.getElementById('localizacao').value.trim();
            
            if (localizacao.length < 5) {
                mostrarErro('erro-localizacao', 'Indique a localiza√ß√£o para recolha (m√≠nimo 5 caracteres)');
                return false;
            }
            
            esconderErro('erro-localizacao');
            return true;
        }

        // Fun√ß√µes auxiliares
        function mostrarErro(elementoId, mensagem) {
            const erroDiv = document.getElementById(elementoId);
            erroDiv.textContent = mensagem;
            erroDiv.style.display = 'block';
        }

        function esconderErro(elementoId) {
            document.getElementById(elementoId).style.display = 'none';
        }

        // Valida√ß√£o completa
        function validarFormulario() {
            let valido = true;
            
            // Validar dados pessoais
            if (!validarNome()) valido = false;
            if (!validarTelefone()) valido = false;
            if (!validarLocalizacao()) valido = false;
            
            // Validar viagem
            const origem = document.getElementById('origem').value;
            const destino = document.getElementById('destino').value;
            
            if (!origem) {
                mostrarErro('erro-origem', 'Selecione a origem');
                valido = false;
            } else {
                esconderErro('erro-origem');
            }
            
            if (!destino) {
                mostrarErro('erro-destino', 'Selecione o destino');
                valido = false;
            } else if (origem === destino) {
                mostrarErro('erro-destino', 'Origem e destino n√£o podem ser iguais');
                valido = false;
            } else {
                esconderErro('erro-destino');
            }
            
            if (!validarData()) valido = false;
            if (!validarHora()) valido = false;
            
            return valido;
        }

        // Criar mensagem para WhatsApp
        function criarMensagemWhatsApp(dados) {
            const dataFormatada = formatarData(dados.data);
            
            return `üöñ *NOVA RESERVA - TARRARFAL TRANSPORTES*

üìã *DADOS DO CLIENTE:*
‚Ä¢ Nome: ${dados.nome}
‚Ä¢ Telefone: ${dados.telefone}
‚Ä¢ Localiza√ß√£o: ${dados.localizacao}

üìç *DETALHES DA VIAGEM:*
‚Ä¢ Rota: ${dados.origem} ‚Üí ${dados.destino}
‚Ä¢ Data: ${dataFormatada}
‚Ä¢ Hora: ${dados.hora}
‚Ä¢ Passageiros: ${dados.passageiros}
${dados.observacoes ? `‚Ä¢ Observa√ß√µes: ${dados.observacoes}\n` : ''}
üí∞ *VALORES:*
‚Ä¢ Pre√ßo base: ${dados.precoBase} Escudos
‚Ä¢ Total: *${dados.precoTotal} Escudos*

üìù *INFORMA√á√ïES DA RESERVA:*
‚Ä¢ N√∫mero: ${dados.numeroReserva}
‚Ä¢ Data da reserva: ${new Date().toLocaleDateString('pt-PT')}
‚Ä¢ Hora da reserva: ${new Date().toLocaleTimeString('pt-PT', {hour: '2-digit', minute:'2-digit'})}

‚ö†Ô∏è *A√á√ÉO REQUERIDA:*
1. Confirmar com o cliente
2. Atribuir motorista
3. Preparar ve√≠culo adequado`;
        }

        // Enviar para WhatsApp
        function enviarParaWhatsApp(dados) {
            const mensagem = criarMensagemWhatsApp(dados);
            const mensagemCodificada = encodeURIComponent(mensagem);
            
            // Criar link do WhatsApp
            const whatsappLink = `https://wa.me/238${NUMERO_WHATSAPP}?text=${mensagemCodificada}`;
            
            // Mostrar informa√ß√£o do WhatsApp
            const whatsappInfo = document.getElementById('whatsapp-info');
            const whatsappLinkElement = document.getElementById('whatsapp-link');
            
            whatsappLinkElement.href = whatsappLink;
            whatsappInfo.style.display = 'block';
            
            // Abrir WhatsApp em nova aba
            setTimeout(() => {
                window.open(whatsappLink, '_blank');
            }, 1000);
            
            return whatsappLink;
        }

        // Submiss√£o do formul√°rio
        document.getElementById('formMarcacao').addEventListener('submit', function(event) {
            event.preventDefault();
            
            if (!validarFormulario()) {
                return;
            }
            
            // Coletar todos os dados
            const dados = {
                nome: document.getElementById('nome').value.trim(),
                telefone: document.getElementById('telefone').value,
                localizacao: document.getElementById('localizacao').value.trim(),
                origem: document.getElementById('origem').value,
                destino: document.getElementById('destino').value,
                data: document.getElementById('data').value,
                hora: document.getElementById('hora').value,
                passageiros: document.getElementById('passageiros').value,
                observacoes: document.getElementById('observacoes').value.trim(),
                rota: `${document.getElementById('origem').value}-${document.getElementById('destino').value}`,
                precoBase: precos[`${document.getElementById('origem').value}-${document.getElementById('destino').value}`] || 0,
                precoTotal: calcularPrecoTotal(),
                numeroReserva: 'RES' + Math.floor(Math.random() * 1000000).toString().padStart(6, '0')
            };
            
            // Desativar bot√£o
            const botao = document.getElementById('btn-submit');
            botao.disabled = true;
            botao.classList.add('loading');
            botao.textContent = 'Enviando para WhatsApp...';
            
            // Simular processamento
            setTimeout(() => {
                // Enviar para WhatsApp
                enviarParaWhatsApp(dados);
                
                // Mostrar confirma√ß√£o ao cliente
                mostrarConfirmacao(dados);
                
                // Resetar bot√£o
                setTimeout(() => {
                    botao.disabled = false;
                    botao.classList.remove('loading');
                    botao.textContent = '‚úÖ Reserva Enviada';
                }, 2000);
            }, 1500);
        });

        // Calcular pre√ßo total
        function calcularPrecoTotal() {
            const origem = document.getElementById('origem').value;
            const destino = document.getElementById('destino').value;
            const passageiros = parseInt(document.getElementById('passageiros').value);
            const rota = `${origem}-${destino}`;
            
            let precoBase = precos[rota] || 0;
            let precoTotal = precoBase;
            
            if (passageiros > 1) {
                precoTotal = precoBase * passageiros;
                if (passageiros >= 5) {
                    precoTotal = precoBase * 4;
                }
            }
            
            return precoTotal;
        }

        // Mostrar confirma√ß√£o
