        // Formatar data
        function formatarData(dataString) {
            const data = new Date(dataString + 'T00:00:00');
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            return data.toLocaleDateString('pt-PT', options);
        }
